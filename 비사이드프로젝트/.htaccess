# Prevent directory listing and direct access to uploaded files for security
Options -Indexes
<FilesMatch "^upload_.*">
    Order deny,allow
    Deny from all
</FilesMatch>

# If using Apache 2.4+
<IfModule mod_authz_core.c>
    <FilesMatch "^upload_.*">
        Require all denied
    </FilesMatch>
</IfModule>

# Allow specific scripts to read files (server-side) while blocking direct HTTP access.
